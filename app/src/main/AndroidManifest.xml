<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.randomappsinc.studentpicker" >

    <application
        android:name=".Misc.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities.NameListsActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.EditNameListActivity" >
            android:parentActivityName=".Activities.NameListsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.randomappsinc.studentpicker.Activities.NameListsActivity" />
        </activity>
        <activity android:name=".Activities.NameChoosingActivity" >
            android:parentActivityName=".Activities.NameListsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.randomappsinc.studentpicker.Activities.NameListsActivity" />
        </activity>
    </application>

</manifest>
