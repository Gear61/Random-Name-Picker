<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.randomappsinc.studentpicker" >

    <application
        android:name="com.randomappsinc.studentpicker.Misc.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities.NameListsActivity"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.EditNameListActivity">
        </activity>
        <activity
            android:name=".Activities.NameChoosingActivity">
        </activity>
    </application>

</manifest>
