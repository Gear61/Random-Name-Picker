<resources>
    <style name="list_item_button">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">32dp</item>
    </style>

    <style name="item_name">
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">28dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="num_names">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@color/app_blue</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="tabs">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/app_blue</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabIndicatorColor">@color/accent_green</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabTextColor">@color/half_white</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="empty_state_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:textSize">27sp</item>
    </style>

    <style name="voice_input_icon">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginEnd">55dp</item>
        <item name="android:layout_marginRight">55dp</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:text">@string/voice_icon</item>
        <item name="android:textColor">@color/app_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="speech_dialog_animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_from_top</item>
    </style>

    <style name="search_icon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/app_blue</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
