<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/dialog_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:ignore="SpUsage"
    >

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/presentation_mode"
        android:text="@string/presentation_mode"
        app:buttonTint="@color/checkbox_box_color"
        style="@style/setting_checkbox"
        />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/with_replacement"
        android:text="@string/with_replacement"
        app:buttonTint="@color/checkbox_box_color"
        style="@style/setting_checkbox"
        />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/automatic_tts"
        android:text="@string/automatic_tts"
        app:buttonTint="@color/checkbox_box_color"
        style="@style/setting_checkbox"
        />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/show_as_list"
        android:text="@string/show_as_list"
        app:buttonTint="@color/checkbox_box_color"
        style="@style/setting_checkbox"
        />

    <LinearLayout
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:text="@string/num_people_chosen"
            style="@style/setting_input_label"
            />

        <EditText
            android:id="@+id/num_people_chosen"
            android:text="@string/default_num_names_chosen"
            style="@style/two_number_setting"
            />
    </LinearLayout>
</LinearLayout>
