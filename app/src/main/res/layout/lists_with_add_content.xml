<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".StudentListsActivity">

    <Button
        android:id="@+id/add_item"
        android:text="@string/plus"
        android:layout_alignParentRight="true"
        android:layout_width="45dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/item_name_input"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:layout_toLeftOf="@+id/add_item"
        android:layout_alignBottom="@id/add_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/no_content"
        android:layout_below="@id/item_name_input"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:textSize="28sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/content_list"
        android:layout_below="@+id/no_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

</RelativeLayout>
