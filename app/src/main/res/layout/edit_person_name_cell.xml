<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:mrl_rippleColor="@color/app_teal"
    app:mrl_rippleInAdapter="true"
    app:mrl_rippleDuration="250"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/delete_icon"
            android:text="@string/delete_icon"
            android:layout_alignParentRight="true"
            style="@style/person_name_icon"/>

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/edit_icon"
            android:text="@string/edit_icon"
            android:layout_toLeftOf="@+id/delete_icon"
            style="@style/person_name_icon"/>

        <TextView
            android:id="@+id/person_name"
            android:layout_toLeftOf="@+id/edit_icon"
            style="@style/person_name"/>
    </RelativeLayout>
</com.balysv.materialripple.MaterialRippleLayout>