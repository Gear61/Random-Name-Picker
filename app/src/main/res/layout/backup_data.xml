<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="SpUsage"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        >

        <com.joanzapata.iconify.widget.IconTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/backup_icon"
            android:textSize="120dp"
            android:textColor="@color/text_normal"
            />

        <TextView
            android:id="@+id/backup_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/text_normal"
            android:textSize="17sp"
            />

        <TextView
            android:id="@+id/backup_data"
            android:layout_marginTop="12dp"
            android:text="@string/backup_data"
            style="@style/rounded_button"
            />

        <TextView
            android:id="@+id/change_backup_folder"
            android:layout_marginTop="12dp"
            android:text="@string/change_backup_folder"
            style="@style/rounded_button"
            />

        <TextView
            android:id="@+id/export_data"
            android:layout_marginTop="12dp"
            android:text="@string/export_data"
            style="@style/rounded_button"
            />
    </LinearLayout>
</ScrollView>
